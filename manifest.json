{
  "manifest_version": 3,
  "name": "Course.Care Pager",
  "description": "Extension for Course.Care that notifies user whenever a student joins their queue",
  "version": "1.0",
  "icons": {
    "16": "images/course_icon.png",
    "32": "images/course_icon.svg"
  },
  "permissions": ["activeTab", "webRequest", "notifications", "scripting"],
  "host_permissions": ["*://course.care/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/course_icon.png"
  },
  "background": { "service_worker": "background.js" },
  "devtools_page": "devtools.html"
}
